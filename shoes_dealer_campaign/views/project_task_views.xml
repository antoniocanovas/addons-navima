<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Task customization : -->
    <record id="shoes_dealer_campaign_task_inh_form" model="ir.ui.view">
        <field name="name">shoes.dealer.campaign.task.inh.form</field>
        <field name="model">project.task</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='description']" position="before">
                <group name="shoes_dealer_campaign" invisible="not is_shoes_campaign">
                    <group>
                        <field name="brand_id"/>
                        <field name="manufacturer_id"/>
                        <field name="material_id"/>
                    </group>
                    <group>
                        <field name="gender"/>
                        <field name="shoes_pair_weight_id"/>
                        <field name="shoes_hscode_id"/>
                    </group>
                </group>
                <field name="is_shoes_campaign" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="product_tmpl_id" invisible="not is_shoes_campaign"/>
            </xpath>

        </field>
        <field name="priority">99</field>
    </record>

</odoo>
