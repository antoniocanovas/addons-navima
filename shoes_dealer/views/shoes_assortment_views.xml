<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- ACCIONES DE VENTANA: -->
    <record id="action_product_shoes_assortment" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="filter" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="limit">80</field>
        <field name="name">Assortments</field>
        <field name="res_model">shoes.assortment</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- SALE CONFIG MENU: -->
    <record id="product_shoes_assortment_menu" model="ir.ui.menu">
        <field name="action" ref="action_product_shoes_assortment"/>
        <field name="active" eval="True"/>
        <field name="name">Assortments</field>
        <field name="parent_id" ref="sale.menu_sale_config"/>
        <field name="sequence">100</field>
        <field name="web_icon" eval="False"/>
    </record>

    <!-- INVENTORY CONFIG MENU: -->
    <record id="inventory_shoes_assortment_menu" model="ir.ui.menu">
        <field name="action" ref="action_product_shoes_assortment"/>
        <field name="active" eval="True"/>
        <field name="name">Assortments</field>
        <field name="parent_id" ref="shoes_dealer.inventory_shoes_dealer_menu"/>
        <field name="sequence">90</field>
        <field name="web_icon" eval="False"/>
    </record>


    <!-- FORM VIEW: -->
    <record id="product_shoes_assortment_default_form" model="ir.ui.view">
        <field name="name">product.shoes.assortment.default.form</field>
        <field name="model">shoes.assortment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Women sizes ..."/>
                    </h1>
                    <group>
                        <field name="code" placeholder="PACK1..." help="This code will be used in the reference of new products."/>
                        <field name="attribute_id" invisible="1"/>
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="value_id" domain="[('attribute_id','=',attribute_id)]"
                                       options="{'no_quick_create': True, 'no_create_edit':True}"/>
                                <field name="quantity"/>
                                <field name="assortment_id" invisible="1"/>
                                <field name="attribute_id" invisible="1"/>
                            </list>
                        </field>
                        <field name="pairs_count"/>
                        <field name="value_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <!-- list VIEW: -->
    <record id="product_shoes_assortment_default_tree" model="ir.ui.view">
        <field name="name">product.shoes.assortment.default.list</field>
        <field name="model">shoes.assortment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="line_ids" widget="many2many_tags"/>
                <field name="pairs_count"/>
                <field name="attribute_id" invisible="1"/>
            </list>
        </field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="priority">16</field>
        <field name="type">list</field>
    </record>

</odoo>
